@mixin font
{
	font-family: Asap;
	font-size: 16px;
	text-transform: uppercase;
}
@mixin padd_marg
{
	padding-top: 120px;
	margin-bottom: 70px;
}
@mixin link ($link, $hover, $active, $visited)
{
	a
	{
		color: $link;

		&:hover
		{
			color: $hover;
		}
		&:active
		{
			color: $active;
		}
		&:visited
		{
			color: $visited;
		}
	}
}